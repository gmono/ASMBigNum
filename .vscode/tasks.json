{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "isShellCommand": true,
    "showOutput": "always",
    "tasks": [
        {
            "taskName": "build",
            "command": "nasm",
            "args": [
                "-f elf64","test.asm","-o test.o"
            ]
        },
        {
            "taskName": "ldrelease",
            "command": "ld",
            "args": [
                "test.o","-s","-o test"
            ]
        },
        {
            "taskName": "lddebug",
            "command": "ld",
            "args": [
                "test.o","-o test"
            ]
        }
    ]
}
//这是linux下配置的
//win下用pe参数